<fest:template xmlns:fest="http://fest.mail.ru">
    <div id="registration" class = "menu">
        <div class="menu__logo logo">
            PewPew
        </div>
        <div class = "menu__wrap">
            <div class = "menu__title">
                Регистрация
            </div>
            <div id = "form__alert"></div>
            <div class = "form">
                <form name="registration">
                    <input name = "email" placeholder = "EMail" class = "form__text_input" id = "email-input"></input>
                    <input name = "login" placeholder = "Логин" class = "form__text_input" id = "login-input"></input>
                    <input name = "password" placeholder = "Пароль" type = "password" class = "form__text_input" id = "password-input"></input>
                    <input name = "password" placeholder = "Повторите пароль" type = "password" class = "form__text_input" id = "repeat-password-input"></input>
                    <input placeholder = "Зарегистрировать" type = "submit" class = "menu__btn" id = 'sign-up'></input>
                </form>
            </div>
            <a href = "#main" class="menu__btn  menu__btn--back">
                Назад
            </a>
        </div>
    </div>
</fest:template>


